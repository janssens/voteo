{% extends 'base.html.twig' %}

{% block title %}Merci {{ contact.Firstname }} !{% endblock %}

{% block body %}
    <div class="wrapper">
        <h3>Bonjour {{ contact.Firstname }}</h3>
        merci pour ton retour
        <br>
        <br>
        {% if false %}
            Tu peux maintenant <a style="color:red;" onclick="window.open('', '_self', ''); window.close();"> ❌ fermer cette fenêtre</a>. <br>
            Fermeture auto dans <span id='countdown' ></span> secondes.
            <script>
                var secondes = 10;
                document.getElementById("countdown").innerHTML = secondes--;
                setTimeout(function() { window.close();}, secondes * 1000);
                var x = setInterval(function() {document.getElementById("countdown").innerHTML = secondes--;}, 1000);
            </script>
        {% else %}
            <h2> {{ question.NbOfResponses}} réponse{% if question.NbOfResponses > 1 %}s{% endif %} reçue{% if question.NbOfResponses > 1 %}s{% endif %} ({{ question.ResponseRate|format_number(style: 'percent') }})</h2>
            <table style="text-align: center;">
                <tr>
                    {% for choice in question.choices %}
                        <td style="background: {{ choice.color ? choice.color : "#fff" }};" ><strong>{{ choice.label }}</strong></td>
                    {% endfor %}  
                </tr>
                <tr>
                    {% for choice in question.choices %}
                        <td style="padding-y: 10px;padding-x: 5px; text-align: left;">
                            <ul>
                            {% for answer in choice.answers %}
                                <li>{{ answer.contact.firstname }}</li>
                            {% endfor %}
                            </ul>
                        </td>
                    {% endfor %}
                </tr>
            </table>
        {% endif %}
    
    </div>
    
{% endblock %}
